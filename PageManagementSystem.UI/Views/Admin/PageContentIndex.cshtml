@model IEnumerable<PageContent>
@{
    ViewData["Title"] = "PageContentIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-12">

                <a asp-action="CreatePageContent" asp-route-id="@ViewBag.PageDataId" class="btn btn-primary mb-3">Yeni İçerik Ekle</a>

                <table class="table">
                    <thead>
                        <tr>
                            <th>İçerik ID</th>
                            <th>İçerik Türü</th>
                            <th>İçerik Değeri</th>
                            <th>Sıra</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model is not null)
                        {
                            @foreach (var content in Model)
                            {
                                <tr>
                                    <td>@content.Id</td>
                                    <td>@content.ContentType</td>
                                    <td>@Html.Raw(content.ContentValue)</td>
                                    <td>@content.Order</td>
                                    <td>
                                        <a asp-action="EditPageContent" asp-route-id="@content.Id" class="btn btn-secondary">Düzenle</a>
                                        <a asp-action="DeletePageContent" asp-route-id="@content.Id" class="btn btn-danger">Sil</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>Veri Bulunamadı...</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </section>
</div>
