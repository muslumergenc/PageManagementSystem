<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="~/Login/logincss/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Login/logincss/adminlte.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700">
    <link rel="stylesheet" href="~/Login/logincss/bootstrap-4.min.css">
    <link rel="stylesheet" href="~/Login/logincss/toastr.min.css">
    <link rel="stylesheet" href="~/Login/logincss/summernote/summernote-bs4.css">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/admin/index" class="nav-link">AnaSayfa</a>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/admin" class="nav-link active">
                                <i class="nav-icon fas fa-home"></i>
                                <p>DashBoard</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">
                                <i class="nav-icon fas fa-map-signs"></i>
                                <p>AnaSayfa<i class="right fas fa-angle-left"></i></p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/admin/slider" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Slider</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/admin/haber" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Haberler</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="/admin/kullanicilar" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Kullanıcılar</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/" target="_blank" class="nav-link">
                                <i class="nav-icon far fa-window-restore"></i>
                                <p>Siteyi İncele</p>
                            </a>
                        </li>
                        <li class="nav-item"><p></p></li>
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                using (Html.BeginForm("logout", "login", FormMethod.Post, new { id = "" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <button type="submit" class="btn btn-outline-danger text-danger nav-link" style="width:100%;display:flex;align-items:center;">
                                        <i class="nav-icon fas fa-sign-out-alt"></i>
                                        <p class="text">Oturumu Kapat</p>
                                    </button>
                                }
                            }
                            else
                            {
                                <a href="@Url.Action("Index", "Login")">Login</a>
                            }
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        @Html.AntiForgeryToken()
        @RenderBody()
        <aside class="control-sidebar control-sidebar-dark"></aside>
        <footer class="main-footer">
            <strong>Copyright &copy; @DateTime.Now.Year <a>Müslüm Ergenç</a></strong>
            Asp.Net Yönetim Paneli
            <div class="float-right d-none d-sm-inline-block"></div>
        </footer>
    </div>
    <script src="~/Login/logincss/jquery.min.js"></script>
    <script src="~/Login/logincss/bootstrap.bundle.min.js"></script>
    <script src="~/Login/logincss/adminlte.js"></script>
    <script src="~/Login/logincss/demo.js"></script>
    <script src="~/Login/logincss/summernote/summernote-bs4.min.js"></script>
    <script src="~/Login/logincss/ekko-lightbox/ekko-lightbox.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
